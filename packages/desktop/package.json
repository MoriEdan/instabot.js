{
  "name": "@instabot.js/desktop",
  "version": "0.0.0",
  "main": "index.js",
  "license": "Apache-2.0",
  "engines": {
    "node": "8.9.3"
  },
  "scripts": {
    "start": "electron electron.js",
    "build": "poi build",
    "test": "jest --colors",
    "lint": "eslint **/*.js"
  },
  "devDependencies": {
    "babel-plugin-emotion": "^9.0.1",
    "electron": "^2.0.0-beta.5",
    "eslint": "^4.19.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "jest": "^22.4.3",
    "poi": "^9.6.13"
  },
  "dependencies": {
    "emotion": "^9.0.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": "airbnb",
    "env": {
      "node": true,
      "browser": true
    },
    "rules": {
      "no-debugger": [0],
      "global-require": [0],
      "react/prop-types": [2, { "ignore": ["children"] }],
      "react/jsx-filename-extension": [0]
    },
    "overrides": [
      {
        "files": ["**/*.test.js"],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "babel": {
    "presets": [["poi", { "jsx": "react" }]],
    "env": {
      "production": {
        "plugins": [
          ["emotion", { "hoist": true }]
        ]
      },
      "development": {
        "plugins": [
          ["emotion", { "sourceMap": true, "autoLabel": true }]
        ]
      }
    }
  }
}
