{
  "name": "@instabot.js/platform",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "main": "index.js",
  "scripts": {
    "test": "jest --color",
    "debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "eslint **/*.js"
  },
  "dependencies": {
    "fs-extra": "^5.0.0",
    "lowdb": "^1.0.0",
    "pify": "^3.0.0"
  },
  "devDependencies": {
    "eslint": "^4.18.2",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.9.0",
    "given2": "^2.1.2",
    "jest": "^22.4.2",
    "mock-fs": "^4.4.2"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "given2/setup"
  },
  "eslintConfig": {
    "root": true,
    "extends": "airbnb-base",
    "rules": {
      "no-debugger": [
        0
      ]
    },
    "globals": {
      "given": true
    },
    "overrides": [
      {
        "files": [
          "**/*.test.js"
        ],
        "env": {
          "jest": true
        },
        "rules": {
          "global-require": [
            0
          ]
        }
      }
    ]
  }
}
