{
  "name": "instabot.js",
  "description": "An attempt to create instabot as gui app",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "scripts": {
    "start": "electron src/main/index.js",
    "test": "jest --colors",
    "lint": "eslint src/**/*.js"
  },
  "engines": {
    "node": "8.9.3"
  },
  "devDependencies": {
    "babel-jest": "^22.4.3",
    "electron": "^1.8.4",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "given2": "^2.1.5",
    "jest": "^22.4.3",
    "mock-fs": "^4.4.2",
    "poi": "^9.6.13"
  },
  "dependencies": {
    "deepmerge": "^2.1.0",
    "emotion": "^9.1.0",
    "fs-extra": "^5.0.0",
    "lodash": "^4.17.5",
    "mobx": "^4.1.1",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "request-promise-native": "^1.0.5",
    "tough-cookie": "^2.3.4"
  },
  "eslintConfig": {
    "root": true,
    "extends": "airbnb",
    "env": {
      "node": true,
      "browser": true
    },
    "globals": {
      "given": true
    },
    "rules": {
      "no-debugger": [
        0
      ],
      "global-require": [
        0
      ],
      "react/prop-types": [
        2,
        {
          "ignore": [
            "children"
          ]
        }
      ],
      "react/jsx-filename-extension": [
        0
      ]
    },
    "overrides": [
      {
        "files": [
          "**/*.spec.js"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./support/jest"
  },
  "babel": {
    "presets": [
      [
        "env", {
          "useBuiltIns": true,
          "modules": false,
          "targets": { "node": "current" }
        }
      ]
    ],
    "plugins": [
      "transform-react-jsx",
      ["transform-object-rest-spread", { "useBuiltIns": true }]
    ]
  }
}
